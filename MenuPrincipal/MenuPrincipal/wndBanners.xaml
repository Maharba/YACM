<Window x:Class="MenuPrincipal.wndBanners"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Banner" Height="200" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="#151E19" Offset="0" />
            <GradientStop Color="#16472A" Offset="0.2" />
            <GradientStop Color="#165D33" Offset="0.85" />
            <GradientStop Color="#165D33" Offset="0.9" />
            <GradientStop Color="#151E19" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".65*"></RowDefinition>
            <RowDefinition Height=".30*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="txtBanner" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Margin="10"></TextBox>
        <UniformGrid Columns="2" Grid.Row="1" HorizontalAlignment="Right">
            <Button Name="btnAceptar" Width="100" Height="30" Margin="10" Click="btnAceptar_Click">Aceptar</Button>
            <Button Name="btnCancelar" Width="100" Height="30" Margin="10" Click="btnCancelar_Click">Cancelar</Button>
        </UniformGrid>
    </Grid>
</Window>
